{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "allowJs": true,
    "types": ["jest", "node"],
    "paths": {
      "": ["node_modules/", "src/types/*"]
    }
  },
  "include": ["src/*/", "mocks/*", ".eslintrc.js"]
}